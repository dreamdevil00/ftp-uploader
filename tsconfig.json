{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "es5",
    "lib": ["es2017", "dom"]
  },
  "include": ["./src/**/*", "./test/**/*", "./typings/**/*"],
  "exclude": ["node_modules"]
}
